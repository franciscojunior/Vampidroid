<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardViewCardText"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Card Text"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/cardText"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textCardText"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textCardText"
                android:layout_below="@+id/textCardText"
                android:layout_marginEnd="26dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="A long card text"
                android:transitionName="cardTextTransition" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <!--Reference: http://stackoverflow.com/questions/27599603/cardview-not-showing-shadow-in-android-l-->
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewDisciplines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        card_view:cardUseCompatPadding="true"
        android:layout_below="@id/cardViewCardText"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textCardDisciplines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Disciplines"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorAccent"/>

            <ImageView
                android:id="@+id/img_card_details_discipline1"
                tools:src="@drawable/ic_dis_protean_sup"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/textCardDisciplines"
                android:layout_alignLeft="@+id/textCardDisciplines"
                android:layout_alignStart="@+id/textCardDisciplines"
                android:layout_marginTop="8dp"
                />

            <ImageView
                android:id="@+id/img_card_details_discipline2"
                tools:src="@drawable/ic_dis_quietus_sup"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_alignTop="@+id/img_card_details_discipline1"
                android:layout_toRightOf="@+id/img_card_details_discipline1"
                android:layout_toEndOf="@+id/img_card_details_discipline1"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/img_card_details_discipline3"
                tools:src="@drawable/ic_dis_quietus"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_marginLeft="8dp"
                android:layout_alignTop="@+id/img_card_details_discipline2"
                android:layout_toRightOf="@+id/img_card_details_discipline2"
                android:layout_toEndOf="@+id/img_card_details_discipline2"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/img_card_details_discipline4"
                tools:src="@drawable/ic_dis_protean"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_alignTop="@+id/img_card_details_discipline3"
                android:layout_toRightOf="@+id/img_card_details_discipline3"
                android:layout_toEndOf="@+id/img_card_details_discipline3" />


            <ImageView
                android:id="@+id/img_card_details_discipline5"
                tools:src="@drawable/ic_dis_protean_sup"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_alignTop="@+id/img_card_details_discipline4"
                android:layout_toRightOf="@+id/img_card_details_discipline4"
                android:layout_toEndOf="@+id/img_card_details_discipline4" />

            <ImageView
                android:id="@+id/img_card_details_discipline6"
                tools:src="@drawable/ic_dis_protean_sup"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_alignTop="@+id/img_card_details_discipline5"
                android:layout_toRightOf="@+id/img_card_details_discipline5"
                android:layout_toEndOf="@+id/img_card_details_discipline5"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                />

            <ImageView
                android:id="@+id/img_card_details_discipline7"
                android:layout_width="@dimen/card_details_image_size"
                android:layout_height="@dimen/card_details_image_size"
                android:layout_below="@+id/img_card_details_discipline1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_alignLeft="@+id/textCardDisciplines"
                android:layout_alignStart="@+id/textCardDisciplines"
                tools:src="@drawable/ic_dis_protean_sup"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardViewCardCapacity"
        card_view:cardUseCompatPadding="true"
        android:layout_below="@id/cardViewDisciplines">

        <include layout="@layout/card_details_capacity" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardViewCardSetRarity"
        card_view:cardUseCompatPadding="true"
        android:layout_below="@id/cardViewCardCapacity">

        <include layout="@layout/card_details_set_rarity" />

    </android.support.v7.widget.CardView>


</RelativeLayout>

