<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MainDrawerStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar.BlackStatusBarColor">

    </style>

    <style name="AppTheme.NoActionBar.CardDetails">

    </style>

    <!--Reference: https://www.bignerdranch.com/blog/splash-screens-the-right-way/-->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Reference: http://stackoverflow.com/questions/27840204/drawerarrowstyle-with-windowactionbaroverlay-color-in-toolbar-->
    <style name="MainDrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="barLength">16dp</item>
        <item name="drawableSize">20dp</item>
        <!--<item name="gapBetweenBars">3dp</item>-->
        <!--<item name="color">@android:color/black</item>-->
    </style>


    <!--Reference: http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout/14533085#14533085-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <!--Reference: https://material.google.com/components/expansion-panels.html#expansion-panels-usage-->
    <style name="NavigationViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#52000000</item>

    </style>

    <style name="CardDetailsCollapsedAppBarTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>

    </style>


    <style name="ActivityThemeCardImage" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MainDrawerStyle</item>
    </style>

    <!--Reference: http://stackoverflow.com/questions/31738831/how-to-change-collapsingtoolbarlayout-typeface-and-size-->
    <!--Reference: http://stackoverflow.com/questions/3297437/shadow-effect-for-a-text-in-android-->
    <style name="CardDetailsExpandedText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">2</item>

    </style>




</resources>
