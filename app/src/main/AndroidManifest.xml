<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="name.vampidroid">
	<application android:name="VampiDroidApplication" android:icon="@drawable/ic_launcher" android:label="@string/app_name"
	android:logo="@drawable/ic_launcher" android:theme="@style/AppTheme">


		<activity android:name=".VampiDroid" android:label="@string/app_name"
		android:launchMode="singleTop" android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>

			<meta-data android:name="android.app.default_searchable"
				android:value=".VampiDroidSearch" />

		</activity>

		<activity android:name=".SplashScreen" android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

		</activity>
		
		
		

		<activity android:name=".VampiDroidSearch" android:label="Search Results"
			android:launchMode="singleTop" android:windowSoftInputMode="stateAlwaysHidden">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>

			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>

		<activity android:name=".CryptDetails" android:label="Crypt Details" />
		
		<activity android:name=".LibraryDetails" android:label="Library Details" />

		<activity android:name=".EditPreferences" android:label="Preferences" />
		
		<activity android:name=".FavoriteCards" android:label="Favorite Cards" android:windowSoftInputMode="stateAlwaysHidden" />
		
		<activity android:name=".DecksList" android:label="Decks" android:windowSoftInputMode="stateAlwaysHidden" />
		
		<activity android:name=".DeckCards" android:label="Deck Cards" android:windowSoftInputMode="stateAlwaysHidden" />
		
		<activity android:name=".NewDeck" android:label="New Deck" android:theme="@android:style/Theme.Dialog" />
		
		<activity android:name=".AddRemoveDeckCard" android:label="Edit deck card" android:theme="@android:style/Theme.Dialog" />
		
		<activity android:name=".Tutorial" android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>

		<!--Reference: http://stackoverflow.com/questions/16777534/using-build-types-in-gradle-to-run-same-app-that-uses-contentprovider-on-one-dev-->
		<!--Reference: http://stackoverflow.com/questions/16777534/using-build-types-in-gradle-to-run-same-app-that-uses-contentprovider-on-one-dev-->

		<!--<provider android:name="VampidroidSuggestionProvider"-->
			<!--android:authorities="name.vampidroid.VampidroidSuggestionProvider"></provider>-->

	</application>
	<uses-sdk android:minSdkVersion="8"
	android:targetSdkVersion="12"/>
</manifest>
